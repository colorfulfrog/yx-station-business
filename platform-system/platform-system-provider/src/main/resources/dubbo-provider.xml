<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="ppm_project_provider" owner="ppm_project_provider" organization="elead" logger="slf4j"/>
	<dubbo:registry address="${DUBBO_ZK_URL}" 
		client="curator" file="/data/zookeeper/ppm_project_provider.cache"/>
	<!--<dubbo:monitor protocol="registry"/> -->
	<dubbo:protocol name="dubbo" port="-1" />

	<dubbo:provider timeout="1200000" loadbalance="leastactive"
		retries="0" cluster="failfast" />
	<dubbo:protocol name="dubbo" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.elead.ppm.project.domain.service.ELProjectService"
		ref="projectService" protocol="dubbo" executes="10000"
		actives="1000" version="1.0.0" />
</beans>
